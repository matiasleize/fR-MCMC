\end_layout

\begin_layout Standard
Partimos de la ecuación 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:H_de_z"
plural "false"
caps "false"
noprefix "false"

\end_inset

 e inegramos
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\int_{H_{0}}^{H\left(z\right)}\frac{dH}{H} & =\int_{0}^{z}\frac{dz}{z+1}\left(2-v\right)\\
\ln\left|\frac{H\left(z\right)}{H_{0}}\right| & =2\ln\left|z+1\right|-\BUNDERBRACE{\int_{0}^{z}\frac{v}{z+1}dz}{\equiv F\left(z\right)}\\
 & =\ln\left(z+1\right)^{2}-F\left(z\right)\\
\frac{H\left(z\right)}{H_{0}} & =\left(z+1\right)^{2}e^{-F\left(z\right)}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\boxed{H\left(z\right)=H_{0}\left(z+1\right)^{2}e^{-F\left(z\right)}}\label{eq:H(z)}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
con 
\begin_inset Formula $F\left(z\right)=\int_{0}^{z}dz\frac{v\left(z\right)}{z+1}$
\end_inset

.
\end_layout

\begin_layout Subparagraph*
Parámetro de Hubble (
\begin_inset Formula $d_{L}\left(z\right)$
\end_inset

): 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\boxed{d_{L}=\left(z+1\right)\int_{0}^{z}\frac{dz}{H\left(z\right)}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\boxed{q=1-v}
\]

\end_inset


\end_layout

